---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import InstructionMessage from '../components/InstructionMessage.astro';
import { intersection } from 'astro:schema';

export interface CardInfo {
	href: string;
	title: string;
	body: string;
}

const cards: CardInfo[] = [
	{
		href: 'https://docs.astro.build/',
		title: 'Documentation & API',
		body: 'Learn how Astro works and explore the official API docs.',
	},
	{
		href: 'https://astro.build/integrations/',
		title: 'Integrations',
		body: 'Supercharge your project with new frameworks and libraries.',
	},
	{
		href: 'https://astro.build/themes/',
		title: 'Themes',
		body: 'Explore a galaxy of community-built starter themes.',
	},
	{
		href: 'https://astro.build/chat/',
		title: 'Community',
		body: 'Come say hi to our amazing Discord community. ❤️',
	},
	{
		href: 'https://google.com',
		title: 'Google',
		body: 'Google is a search engine.',
	},

];

export interface InstrunctionsInfo {
	message: string;
}

const instructions: InstrunctionsInfo[] = [
	{
		message: 'Welcome to Astro! This is a new page! You can find it at src/pages/index.astro.',
	},
	{
		message: 'Start opening VC and get fun coding',
	},
	{
		message: 'Start opening VC and get fun coding',
	},
];


---

<Layout title="Astro">

	{ instructions.map( ( inst ) => (
		<InstructionMessage 
			message={ inst.message }
		/>
	) ) }


	<ul role="list" class="link-card-grid">

		{ cards.map( (card) => (
			<Card
				href={ card.href }
				title={ card.title  }
				body={ card.body }
			/>
		))}

		<Card
			href="/hello"
			title="Hello"
			body="Go to hello"
		/>

		<Card
			href={ cards[0].href }
			title={ cards[0].title }
			body={ cards[0].body }
		/>


	</ul>

</Layout>

<style>
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
